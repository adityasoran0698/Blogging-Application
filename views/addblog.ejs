<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blogs</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Simonetta:ital,wght@0,400;0,900;1,900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Josefin Sans", sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            width: 100%;
            padding: 20px;
            display: flex;
            justify-content: center;
        }

        .box {
            width: 100%;
            max-width: 800px;
            background-color: white;
            border-radius: 10px;
            padding: 30px 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .box h1 {
            text-align: center;
            font-size: 32px;
            margin-bottom: 25px;
            font-family: "DM Serif Text", serif;
        }

        .form label {
            font-size: 18px;
            display: block;
            margin-bottom: 6px;
        }

        .form input[type="text"],
        .form textarea,
        .form input[type="file"] {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
            background-color: #fff;
        }

        .form textarea {
            resize: vertical;
        }

        .form button {
            padding: 12px 24px;
            font-size: 18px;
            border: none;
            border-radius: 6px;
            background-color: #1b6ad9;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form button:hover {
            background-color: #155bb3;
        }

        .error {
            display: flex;
            width: 100vw;
            justify-content: center;
            align-items: center;
            border: 1px solid rgb(232, 35, 35);
            margin-top: 10px;
            padding: 10px;
            font-size: 25px;
            font-family:'Times New Roman', Times, serif;
            color: red;
            background: linear-gradient(135deg, #FCC2BF, #F7BED5);
        }

        @media (max-width: 600px) {
            .box {
                padding: 20px 15px;
            }

            .box h1 {
                font-size: 26px;
            }

            .form button {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <%- include("./partials/nav") %>
        <% if (locals.error) { %>
            <div class="error">
                <%= locals.error %>
            </div>
            <% } %>
                <div class="container">
                    <div class="box">

                        <h1>Add a Blog Post</h1>
                        <% if (!locals.editblog) { %>
                            <form class="form" method="post" enctype="multipart/form-data" action="/blog/addblogs">
                                <label for="cover-image">Cover Image:</label>
                                <input type="file" id="cover-image" name="coverImageURL">

                                <label for="title">Title:</label>
                                <input type="text" id="title" name="title">

                                <label for="body">Body:</label>
                                <textarea name="body" placeholder="Write your content here..." rows="5"></textarea>

                                <button type="submit">Submit</button>
                            </form>
                            <% } else { %>
                                <form class="form" method="post" action="/blog/update/<%= editblog.id %>">
                                    <label for="cover-image">Cover Image:</label>
                                    <input type="file" id="cover-image" name="coverImageURL"
                                        value="<%= editblog.coverImageURL %>">

                                    <label for="title">Title:</label>
                                    <input type="text" id="title" name="title" value="<%= editblog.title %>">

                                    <label for="body">Body:</label>
                                    <textarea name="body" placeholder="Write your content here..."
                                        rows="5"><%= editblog.body %></textarea>

                                    <button type="submit">Submit</button>
                                </form>
                                <% } %>
                    </div>
                </div>
</body>

</html>