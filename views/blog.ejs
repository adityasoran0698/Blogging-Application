<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= blog.title %>
    </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            width: 100%;
            overflow-x: hidden;
        }

        .container {
            width: 100%;
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        .container h1 {
            font-size: 35px;
            text-align: center;
            margin-bottom: 2rem;
        }

        .cover-image {
            width: 100%;
            max-width: 600px;
            height: auto;
            display: block;
            margin: auto;
            border-radius: 8px;
        }

        .blog-body {
            margin-top: 2rem;
            font-size: 18px;
            white-space: pre-wrap;
            text-align: justify;
            border-top: 1px solid black;
            padding-top: 10px;
            word-break: break-word;
            overflow-wrap: break-word;
        }

        .createdby {
            display: flex;
            align-items: center;
            font-size: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .createdby img {
            width: 50px;
            height: 50px;
            border-radius: 100%;
            object-fit: cover;
            margin-right: 10px;
        }

        .comment {
            width: 100%;
            margin-top: 30px;
        }

        .comment h1 {
            text-align: left;
            margin-bottom: 1rem;
        }

        .comment input {
            height: 50px;
            width: 100%;
            padding: 10px;
            font-size: 18px;
            margin-bottom: 1rem;
            border-radius: 10px;
            border: 1px solid #ccc;
        }

        .comment button {
            font-size: 18px;
            height: 50px;
            width: 100px;
            border-radius: 10px;
            color: white;
            background-color: rgb(0, 153, 255);
            border: none;
            cursor: pointer;
        }

        .comment-box {
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid grey;
            padding: 15px 0;
            margin-bottom: 1rem;
        }

        .cmmnt-profile-image {
            display: flex;
            align-items: center;
            font-size: 20px;
        }

        .cmmnt-profile-image img {
            width: 50px;
            height: 45px;
            border-radius: 100%;
            margin-right: 13px;
            object-fit: cover;
        }

        p {
            font-size: 15px;
        }

        .add-comments {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        @media (max-width: 600px) {
            .container h1 {
                font-size: 26px;
            }

            .add-comments {
                flex-direction: column;
                align-items: stretch;
            }

            .comment input,
            .comment button {
                width: 100%;
            }

            .createdby {
                flex-direction: column;
                align-items: flex-start;
            }

            .createdby img {
                margin-bottom: 5px;
            }
        }
    </style>
</head>

<body>
    <%- include("./partials/nav") %>

        <div class="container">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="Cover Image" class="cover-image" />
            <div class="blog-body">
                <%= blog.body %>
            </div>

            <div class="createdby">
                <img src="<%= blog.createdBy.profileImageURL %>" alt="">
                <span>
                    <%= blog.createdBy.fullname %>
                </span>
            </div>

            <div class="comment">
                <h1>Comments (<%= comments.length %>)</h1>

                <% if (locals.user) { %>
                    <form method="post" action="/blog/comment/<%= blog.id %>" class="add-comments">
                        <input type="text" name="content" placeholder="Enter your comment here" />
                        <button type="submit">Add</button>
                    </form>
                    <% } %>

                        <% comments.forEach(comment=> { %>
                            <div class="comment-box">
                                <div class="cmmnt-profile-image">
                                    <img src="<%= comment.createdBy.profileImageURL %>" alt="">
                                    <div>
                                        <h5>
                                            <%= comment.createdBy.fullname %>
                                        </h5>
                                        <p>
                                            <%= comment.content %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
            </div>
        </div>
</body>

</html>